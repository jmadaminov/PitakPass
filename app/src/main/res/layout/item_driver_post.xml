<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <View
            android:id="@+id/line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/ic_grey"
            app:layout_constraintBottom_toTopOf="@id/circleTo"
            app:layout_constraintEnd_toEndOf="@id/circleFrom"
            app:layout_constraintStart_toStartOf="@id/circleFrom"
            app:layout_constraintTop_toBottomOf="@id/circleFrom" />

        <ImageView
            android:id="@+id/circleFrom"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/shape_round_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/circleTo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/shape_circle_disabled"
            app:layout_constraintBottom_toTopOf="@id/note"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/circleFrom"
            app:layout_constraintStart_toEndOf="@id/circleFrom"
            app:layout_constraintTop_toTopOf="@id/circleFrom"
            tools:text="TASHKENT" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/circleTo"
            app:layout_constraintStart_toEndOf="@id/circleTo"
            app:layout_constraintTop_toTopOf="@id/circleTo"
            tools:text="ANDIJAN" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/from"
            app:layout_constraintTop_toTopOf="@id/from"
            tools:text="02.05.2200" />

        <TextView
            android:id="@+id/seats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/date"
            app:layout_constraintTop_toBottomOf="@id/date"
            tools:text="4/3" />


        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@id/date"
            app:layout_constraintTop_toBottomOf="@id/seats"
            tools:text="50,000 sum" />


        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/dark_grey"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price"
            tools:text="note note sohisdf asdfasdf sadfas fsd fsadf asdfsd" />


        <ImageView
            android:id="@+id/ivDriver"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_marginStart="12dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/note" />


        <TextView
            android:id="@+id/tvDriverName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@id/tvCarInfo"
            app:layout_constraintStart_toEndOf="@id/ivDriver"
            app:layout_constraintTop_toTopOf="@id/ivDriver"
            app:layout_constraintWidth_percent="0.2"
            tools:text="Name Surname" />


        <TextView
            android:id="@+id/tvCarInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="start"
            android:textSize="12dp"
            android:textColor="@color/dark_grey"
            app:layout_constraintEnd_toStartOf="@id/ivCarPhoto"
            app:layout_constraintStart_toEndOf="@id/tvDriverName"
            app:layout_constraintTop_toTopOf="@id/tvDriverName"
            app:layout_constraintWidth_percent="0.3"
            tools:text="Car Model 2 uz Qizil PETROL 2013 xa107u" />


        <ImageView
            android:id="@+id/ivCarPhoto"
            android:layout_width="0dp"
            android:layout_height="?android:actionBarSize"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tvCarInfo"
            app:layout_constraintTop_toBottomOf="@id/note" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>