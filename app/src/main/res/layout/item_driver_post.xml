<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">


        <ImageView
            android:id="@+id/ivDriver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvDriverName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/dark_grey"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@id/ivCarPhoto"
            app:layout_constraintStart_toEndOf="@id/ivDriver"
            app:layout_constraintTop_toTopOf="@id/ivDriver"
            tools:text="Name Surname" />


        <RatingBar
            android:id="@+id/ratingBarDriver"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/tvDriverName"
            app:layout_constraintTop_toBottomOf="@id/tvDriverName" />

        <View
            android:id="@+id/line"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/ic_grey"
            app:layout_constraintBottom_toTopOf="@id/circleTo"
            app:layout_constraintEnd_toEndOf="@id/circleFrom"
            app:layout_constraintStart_toStartOf="@id/circleFrom"
            app:layout_constraintTop_toBottomOf="@id/circleFrom" />


        <ImageView
            android:id="@+id/circleFrom"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/shape_round_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivDriver" />


        <ImageView
            android:id="@+id/circleTo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/shape_circle_disabled"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/circleFrom" />


        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:text="TASHKENT"
            android:textColor="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/circleFrom"
            app:layout_constraintStart_toEndOf="@id/circleFrom"
            app:layout_constraintTop_toTopOf="@id/circleFrom" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:text="ANDIJAN"
            android:textColor="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="@id/circleTo"
            app:layout_constraintStart_toEndOf="@id/circleTo"
            app:layout_constraintTop_toTopOf="@id/circleTo" />


        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/dark_grey"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/to"
            tools:text="note note sohisdf asdfasdf sadfas fsd fsadf asdfsd" />

        <ImageView
            android:id="@+id/ivFuelType"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_gascan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCarPhoto"
            app:tint="@color/red" />

        <ImageView
            android:id="@+id/ivAC"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_ac_unit_24"
            app:layout_constraintEnd_toStartOf="@id/ivFuelType"
            app:layout_constraintTop_toBottomOf="@id/ivCarPhoto"
            app:tint="#4DD0E1" />

        <LinearLayout
            android:id="@+id/llPriceSeatsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/ivFuelType">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_baseline_money_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|end"
                android:text="50,000 sum"
                android:textColor="@color/dark_grey"
                app:layout_constraintBottom_toTopOf="@id/note"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/date"
                app:layout_constraintTop_toBottomOf="@id/seats" />

            <TextView
                android:id="@+id/seats"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:drawableRight="@drawable/ic_baseline_airline_seat_recline_extra_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|end"
                android:paddingEnd="20dp"
                android:textColor="@color/dark_grey"
                app:drawableTint="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/date"
                app:layout_constraintTop_toBottomOf="@id/date"
                tools:text="3" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_baseline_calendar_today_24"
                android:drawablePadding="10dp"
                android:gravity="center_vertical|end"
                android:text="02.05.2200"
                android:textColor="@color/dark_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/from"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>


        <!--        <TextView-->
        <!--            android:id="@+id/tvCarInfo"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="12dp"-->
        <!--            android:layout_marginTop="12dp"-->
        <!--            android:gravity="start"-->
        <!--            android:textColor="@color/dark_grey"-->
        <!--            android:textSize="12dp"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="@id/note"-->
        <!--            tools:text="Car Model 2 uz Qizil PETROL 2013 xa107u" />-->

        <ImageView
            android:id="@+id/ivCarPhoto"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/lacetti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>